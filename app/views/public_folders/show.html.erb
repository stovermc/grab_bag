<h1><%= @folder.name %></h1>

<div class="folder_contents">
  <table class="table">
    <div class="folders">
      <th width="75px"></th>
      <th>Name</th>
      <th>Owner</th>
      <th>Date Changed</th>
      <th>Status</th>
      <th></th>
      <% @child_folders.each do |folder|%>
        <tr>
          <td><%= image_tag(folder.owner.avatar_url) %></td>
            <td> <%= link_to folder.name, public_folder_path(folder) %>
          <td> <%=folder.owner.username%></td>
          <td> <%=folder.updated_at%></td>
          <td> <%=folder.permission%></td>
          <td> <%= current_admin_delete_button(current_user, folder) %></td>
        </tr>
      <% end %>
      <% @binaries.each do |binary|%>
        <tr>
          <td><%= image_tag("https://fakeimg.pl/300/") %></td>
            <td> <%= link_to binary.name, public_folders_binary_path(binary) %>
          <td> <%=binary.folder.name%></td>
          <td> <%=binary.updated_at%></td>
          <td> <%=binary.status%></td>
          <% if current_admin? %>
          <td> <%= link_to 'Delete', folder.url, data: {confirm: 'Are you sure? This will delete all the contents inside the folder as well.'}, method: :delete, class: 'btn btn-danger' %></td>
          <% end %>
        </tr>
      <% end %>



      <br>
    </div>
  </table>
</div>
